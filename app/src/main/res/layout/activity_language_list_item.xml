<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
			<ImageView android:id="@+id/language_list_item_delete_imageview" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
				android:src="@drawable/delete_one"
				android:layout_margin="10dp"
				android:contentDescription="@string/opt_delete"
				android:focusable="false"
				android:clickable="true"
				android:visibility="gone"
			/>
            <TextView
                android:id="@+id/activity_language_list_item_type"
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:padding="3dp"
                android:lineSpacingExtra="20dp"
                android:layout_toRightOf="@id/language_list_item_delete_imageview"
                android:text=""
                android:gravity="center_vertical"
                android:textColor="#5B5B5B"
                android:textSize="20sp" />
            
             <TextView
                android:id="@+id/activity_language_list_item_languageid"
                android:layout_width="wrap_content"
                android:layout_height="26sp"
                android:lineSpacingExtra="20dp"
                android:layout_toRightOf="@id/activity_language_list_item_type"
                android:text=""
                android:textColor="#5B5B5B"
                android:textSize="23sp" 
                android:visibility="gone"/>


        </RelativeLayout>
    </LinearLayout>    

</LinearLayout>
