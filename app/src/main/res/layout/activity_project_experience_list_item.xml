<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dip"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
			<ImageView android:id="@+id/project_experience_list_item_delete_imageview" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
				android:src="@drawable/delete_one"
				android:layout_margin="10dp"
				android:contentDescription="@string/opt_delete"
				android:focusable="false"
				android:clickable="true"
				android:visibility="gone"
			/>
            <TextView
                android:id="@+id/activity_project_experience_list_item_projectname"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:lineSpacingExtra="20dp"
                android:layout_toRightOf="@id/project_experience_list_item_delete_imageview"
                android:text=""
                android:textColor="#5B5B5B"
                android:layout_marginBottom="2dip"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/activity_project_experience_list_item_starttime"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_below="@id/activity_project_experience_list_item_projectname"
                android:lineSpacingExtra="20dp"
                android:layout_toRightOf="@id/project_experience_list_item_delete_imageview"
                android:text=""
                android:gravity="top"
                android:textColor="@color/gray1"
                android:textSize="15sp" />
            
            <TextView
                android:id="@+id/project_experience_date_lang"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_below="@id/activity_project_experience_list_item_projectname"
                android:lineSpacingExtra="20dp"
                android:layout_toRightOf="@id/activity_project_experience_list_item_starttime"
                android:text="@string/work_history_date_lang"
                android:layout_marginLeft="0.5dip"
                android:layout_marginRight="0.5dip"
                android:textColor="@color/gray1"
                android:textSize="15sp" 
                 android:gravity="top"
                />
            
            <TextView
                android:id="@+id/activity_project_experience_list_item_endtime"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_below="@id/activity_project_experience_list_item_projectname"
                android:lineSpacingExtra="20dp"
                android:layout_toRightOf="@id/project_experience_date_lang"
                android:text=""
                android:textColor="@color/gray1"
                android:textSize="15sp"
                 android:gravity="top"
                 />
            
            <TextView
                android:id="@+id/activity_project_experience_list_item_projectid"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_below="@id/activity_project_experience_list_item_projectname"
                android:lineSpacingExtra="20dp"
                android:layout_toRightOf="@id/activity_project_experience_list_item_endtime"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/gray1"
                android:textSize="12sp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
