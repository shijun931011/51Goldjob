<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <include
            android:id="@+id/public_top_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/public_layout_topbar" />
        
        <TableLayout
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*" >

        
        
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:background="@drawable/btn_layout_list_two" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                
                >
                <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="*"
    android:textColor="#FF0000"
    android:layout_marginTop="7dip"
    ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginTop="8dip"
                android:textColor="#5B5B5B"
                 android:textSize="18sp"
                android:text="@string/advanced_basesalary" />
            </LinearLayout>

            <EditText
                android:id="@+id/advanced_basesalary_id"
                android:layout_height="wrap_content"
                android:background="@drawable/input_shape"
                android:drawableRight="@drawable/icon_arrow"
                android:ems="10"
                android:textColor="#5B5B5B"
                 android:textSize="16sp"
                android:hint="请输入"
                android:singleLine="true"
                android:gravity="right"
                />
        </TableRow>
        
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:padding="5dip"
            android:background="@drawable/btn_layout_list_two" >
         <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#FF0000"
                    android:layout_marginTop="7dip"
                 ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="10dp"
                 android:textSize="18sp"
                android:layout_marginTop="7dip"
                android:textColor="#5B5B5B"
                android:text="@string/advanced_yearbonus" />
            </LinearLayout>

            <EditText
                android:id="@+id/advanced_yearbonus_id"
                android:layout_height="wrap_content"
                android:background="@drawable/input_shape"
                android:drawableRight="@drawable/icon_arrow"
                android:ems="10"
                android:textColor="#5B5B5B"
                android:hint="请输入"
                 android:textSize="16sp"
                   android:singleLine="true"
                android:gravity="right"
                />
        </TableRow>

        
         <TableRow
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="5dip"
              android:background="@drawable/btn_layout_list_two" >
             <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                
                >
                <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="*"
                 android:textColor="#FF0000"
                 android:layout_marginTop="7dip"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginTop="7dip"
                 android:textSize="18sp"
                android:textColor="#5B5B5B"
                android:text="@string/advanced_stock" />
            </LinearLayout>

            <EditText
                android:id="@+id/advanced_stock_id"
                android:layout_height="wrap_content"
                android:background="@drawable/input_shape"
                android:drawableRight="@drawable/icon_arrow"
                android:ems="10"
                android:textColor="#5B5B5B"
                 android:textSize="16sp"
                android:hint="请输入"
                   android:singleLine="true"
                android:gravity="right"
                />
        </TableRow>
        

            <TableRow
                android:layout_width="wrap_content"
                android:padding="5dip"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_layout_list_two" >
               <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#FF0000"
                    android:layout_marginTop="7dip"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:textColor="#5B5B5B"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginTop="7dip"
                android:textSize="18sp"
                android:text="@string/advanced_subsidy" />
        </LinearLayout>
            <EditText
                android:id="@+id/advanced_subsidy_id"
                android:layout_height="wrap_content"
                android:background="@drawable/input_shape"
                android:drawableRight="@drawable/icon_arrow"
                android:ems="10"
                   android:singleLine="true"
                   android:textColor="#5B5B5B"
                android:hint="请输入"
                android:textSize="16sp"
                android:gravity="right"
                />
        </TableRow>
        
        
    </TableLayout>
    </LinearLayout>

</LinearLayout>
