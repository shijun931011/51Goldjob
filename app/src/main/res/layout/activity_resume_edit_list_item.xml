<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:padding="3dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical" >

	    <TextView
	        android:id="@+id/resume_edit_list_item_label_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="left|center"
	        android:textColor="#5B5B5B"
	        android:padding="10dp"
	        android:textSize="18sp"
	        android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="11dip"
        android:gravity="fill_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            
            android:visibility="visible" >

	        <ImageView
	            android:id="@+id/resume_edit_list_item_imgview"
	            android:layout_width="18dp"
	            android:layout_height="match_parent"
	            android:layout_alignParentRight="true"
	            android:src="@drawable/icon_arrow"
	            android:layout_marginLeft="10dp"
	            android:paddingRight="10dp"
	            
	             />
		    
            <TextView
                android:id="@+id/resume_edit_list_item_value_txt"
                android:layout_toLeftOf="@id/resume_edit_list_item_imgview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"  
	            android:gravity="center"
                android:text=""
                android:textColor="@android:color/darker_gray"
                android:lineSpacingExtra="20dp"        
                android:textSize="16sp" 
                android:hint="@string/imperfect" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
