<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="70dip"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp" 
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            >
            <ImageView android:id="@+id/work_history_list_item_delete_imageview" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
				android:src="@drawable/delete_one"
				android:layout_margin="10dp"
				android:contentDescription="@string/opt_delete"
				android:focusable="false"
				android:clickable="true"
				android:visibility="gone"
			/>
            <TextView
                android:id="@+id/activity_work_history_list_item_corpname"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:lineSpacingExtra="20dp"
                android:text=""
                android:textColor="#5B5B5B"
                android:layout_toRightOf="@id/work_history_list_item_delete_imageview"
                android:textSize="18sp" />

            
            <TextView
		        android:id="@+id/activity_work_history_list_item_starttime"
		        android:layout_below="@id/activity_work_history_list_item_corpname"
		        android:layout_width="wrap_content"
		        android:layout_height="24dp"
		        android:lineSpacingExtra="20dp"
		        android:text=""
		        android:textColor="#5B5B5B"
		        android:layout_marginTop="2dip"
		        android:layout_toRightOf="@id/work_history_list_item_delete_imageview"
		        android:textSize="14sp" />
            
            <TextView
		        android:id="@+id/work_history_date_lang"
		        android:layout_toRightOf="@id/activity_work_history_list_item_starttime"
		        android:layout_below="@id/activity_work_history_list_item_corpname"
		        android:layout_width="wrap_content"
		        android:layout_height="24dp"
		        android:layout_marginTop="2dip"
		        android:lineSpacingExtra="20dp"
		        android:layout_marginRight="0.5dip"
		        android:layout_marginLeft="0.5dip"
		        android:text="@string/work_history_date_lang"
		        android:textColor="#5B5B5B"
		        android:textSize="14sp" />
            
			<TextView
		        android:id="@+id/activity_work_history_list_item_endtime"
		        android:layout_toRightOf="@id/work_history_date_lang"
		        android:layout_below="@id/activity_work_history_list_item_corpname"
		        android:layout_width="wrap_content"
		        android:layout_height="24dp"
		        android:layout_marginTop="2dip"
		        android:lineSpacingExtra="20dp"
		        android:text=""
		        android:textColor="#5B5B5B"
		        android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>