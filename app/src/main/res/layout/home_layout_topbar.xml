<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="54.5dip"
        android:background="@drawable/background" >

        <RelativeLayout
            android:layout_width="70dip"
            android:layout_height="fill_parent"
            android:background="@drawable/btn_back_selector"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                 <ImageView
                    android:id="@+id/home_title_logout_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dip"
                android:src="@drawable/icon_logout" 
                android:visibility="visible"/>
                
                
                <ImageView
                    android:id="@+id/home_title_login_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dip"
                android:src="@drawable/icon_login" 
                android:visibility="visible"/>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/home_title_middle_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dip"
                android:contentDescription="@string/none"
                android:visibility="visible" />

            <TextView
                android:id="@+id/home_title_middle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dip"
                android:text="@string/topbar_homepage"
                android:textColor="@drawable/orange2"
                android:textSize="21sp"
                android:visibility="visible" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="85dip"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_back_selector"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <FrameLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content">
	                
	                <ImageView
                    android:id="@+id/home_title_more_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dip"
                android:src="@drawable/icon_more" 
                android:visibility="visible"/>
                    
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>