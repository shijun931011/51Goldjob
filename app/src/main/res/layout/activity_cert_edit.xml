<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <include
            android:id="@+id/public_top_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/public_layout_topbar" />
        
        <TableLayout
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*" >

        
            
        <TableRow
            android:layout_width="wrap_content"
            android:padding="5dip"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_layout_list_two" >

             <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                
                >
                <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="*"
    android:textColor="#FF0000"
    android:layout_marginTop="7dip"
    ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginTop="7dip"
                android:textColor="#5B5B5B"
                android:textSize="18sp"
                android:text="@string/cert_certname" />
</LinearLayout>
            <EditText
                android:id="@+id/cert_certname_id"
                android:layout_height="wrap_content"
                android:background="@drawable/input_shape"
                android:drawableRight="@drawable/icon_arrow"
                android:ems="10"
                android:textSize="16sp"
                android:textColor="#5B5B5B"
                android:singleLine="true"
                android:hint="@string/write_hit"
                android:gravity="right"
                />
        </TableRow>
         <TableRow
            android:layout_width="wrap_content"
                 android:padding="5dip"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_layout_list_two" >

              <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                
                >
                <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="*"
    android:textColor="#FF0000"
    android:layout_marginTop="7dip"
    ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="10dp"
               android:textColor="#5B5B5B"
                android:textSize="18sp"
                android:layout_marginTop="7dip"
                android:text="@string/cert_certorg" />
</LinearLayout>
            <EditText
                android:id="@+id/cert_certorg_id"
                android:layout_height="wrap_content"
                android:background="@drawable/input_shape"
                android:drawableRight="@drawable/icon_arrow"
                android:ems="10"
                android:singleLine="true"
                android:textColor="#5B5B5B"
                android:textSize="16sp"
                android:hint="@string/write_hit"
                android:gravity="right"
                />
        </TableRow>
         <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                 android:padding="5dip"
            android:background="@drawable/btn_layout_list_two" >
 <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                
                >
                <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="*"
    android:textColor="#FF0000"
    android:layout_marginTop="7dip"
    ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#5B5B5B"
                android:textSize="18sp"
                android:text="@string/cert_score" />
            </LinearLayout>

            <EditText
                android:id="@+id/cert_score_id"
                android:layout_height="wrap_content"
                android:background="@drawable/input_shape"
                android:drawableRight="@drawable/icon_arrow"
                android:ems="10"
                android:singleLine="true"
                android:textSize="16sp"
                android:textColor="#5B5B5B"
                android:hint="@string/write_hit"
                android:gravity="right"
                />
        </TableRow>
        
        
        </TableLayout>
        </LinearLayout>
</LinearLayout>
