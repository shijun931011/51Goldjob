<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <include
            android:id="@+id/public_top_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/public_layout_topbar" />
        
        <TableLayout
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_layout_list_two"
            android:padding="5dip"
            >
<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                
                >
                <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="*"
    android:textColor="#FF0000"
    android:layout_marginTop="7dip"
    ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginTop="7dip"
                android:textColor="#5B5B5B"
                android:textSize="18sp"
                android:text="@string/starttime" />
</LinearLayout>
            <TextView
                android:id="@+id/training_starttime_id"
                android:layout_height="wrap_content"
                android:background="@drawable/input_shape"
                android:drawableRight="@drawable/icon_arrow"
                android:gravity="right"
               android:textColor="@android:color/darker_gray"
                android:text="请选择"
                android:textSize="16sp"
                android:ems="10"
                android:clickable="true"
                />
        </TableRow>
        
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:background="@drawable/btn_layout_list_two" >
<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                
                >
                <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="*"
    android:textColor="#FF0000"
    android:layout_marginTop="7dip"
    ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginTop="7dip"
                android:textSize="18sp"
                android:textColor="#5B5B5B"
                android:text="@string/endtime" />
</LinearLayout>
            <TextView
                android:id="@+id/training_endtime_id"
                android:layout_height="wrap_content"
                android:background="@drawable/input_shape"
                android:drawableRight="@drawable/icon_arrow"
                android:gravity="right"
                android:textSize="16sp"
                android:ems="10"
                android:text="请选择"
                android:textColor="@android:color/darker_gray"
                android:clickable="true"
                />
        </TableRow>
        
            
        <TableRow
            android:layout_width="wrap_content"
            android:padding="5dip"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_layout_list_two" >
<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                
                >
                <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="*"
    android:textColor="#FF0000"
    android:layout_marginTop="7dip"
    ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:textColor="#5B5B5B"
                android:text="@string/training_org" />
</LinearLayout>
            <EditText
                android:id="@+id/training_org_id"
                android:layout_height="wrap_content"
                android:background="@drawable/input_shape"
                android:drawableRight="@drawable/icon_arrow"
                android:ems="10"
                android:gravity="right"
                 android:singleLine="true"
                android:textSize="16sp"
                 android:textColor="@android:color/darker_gray"
                android:hint="@string/write_hit"
                />
        </TableRow>
        
         <TableRow
            android:layout_width="wrap_content"
            android:padding="5dip"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_layout_list_two" >
<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                
                >
                <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="*"
    android:textColor="#FF0000"
    android:layout_marginTop="7dip"
    ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:paddingTop="7dip"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:textColor="#5B5B5B"
                android:text="@string/training_address" />
</LinearLayout>
            <EditText
                android:id="@+id/training_address_id"
                android:layout_height="wrap_content"
                android:background="@drawable/input_shape"
                android:drawableRight="@drawable/icon_arrow"
                android:ems="10"
                 android:singleLine="true"
                 android:textSize="16dp"
                android:textColor="@android:color/darker_gray"
                android:gravity="right"
                android:hint="@string/write_hit"
                />
        </TableRow>
        
         <TableRow
            android:layout_width="wrap_content"
            android:padding="5dip"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_layout_list_two" >
<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                
                >
                <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="*"
    android:textColor="#FF0000"
    android:layout_marginTop="7dip"
    ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:textColor="#5B5B5B"
                android:layout_marginTop="7dip"
                android:text="@string/training_subject" />
</LinearLayout>
            <EditText
                android:id="@+id/training_subject_id"
                android:layout_height="wrap_content"
                android:background="@drawable/input_shape"
                android:drawableRight="@drawable/icon_arrow"
                android:ems="10"
                android:gravity="right"
                 android:textSize="16dp"
                  android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:hint="@string/write_hit"
                />
        </TableRow>
        
         <TableRow
            android:layout_width="wrap_content"
            android:padding="5dip"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_layout_list_two" >
<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                
                >
                <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="*"
    android:textColor="#FF0000"
    android:layout_marginTop="7dip"
    ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dip"
                android:textSize="18sp"
                android:textColor="#5B5B5B"
                android:text="@string/training_cert" />
</LinearLayout>
            <EditText
                android:id="@+id/training_cert_id"
                android:layout_height="wrap_content"
                android:background="@drawable/input_shape"
                android:drawableRight="@drawable/icon_arrow"
                android:ems="10"
                android:gravity="right"
                 android:singleLine="true"
                 android:textSize="16dp"
                android:textColor="@android:color/darker_gray"
                android:hint="@string/write_hit"
                />
        </TableRow>
         
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:background="@drawable/btn_layout_list_two" >
<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                
                >
                <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="*"
    android:textColor="#FF0000"
    android:layout_marginTop="7dip"
    ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginTop="7dip"
                android:textSize="18sp"
                android:textColor="#5B5B5B"
                android:text="@string/training_remark" />
</LinearLayout>
            <TextView
                android:id="@+id/training_remark_id"
                android:layout_height="wrap_content"
                android:background="@drawable/input_shape"
                android:drawableRight="@drawable/icon_arrow"
                android:gravity="right"
                android:hint="@string/write_hit"
                 android:singleLine="true"
                android:tag="@string/training_remark"
                android:textSize="16dp"
                android:textColor="@android:color/darker_gray"
                android:ems="10"
                />
        </TableRow>
        
        
        </TableLayout>
        </LinearLayout>

</LinearLayout>
