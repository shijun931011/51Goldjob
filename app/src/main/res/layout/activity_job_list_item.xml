<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|top"
    android:gravity="center_vertical|top"
    android:orientation="horizontal"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/job_list_item_jobname"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:textColor="#5B5B5B"
                android:lineSpacingExtra="20dp"
                android:text=""
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="20sp" />
            
            <TextView
                android:id="@+id/job_list_item_corpname"
                android:layout_below="@id/job_list_item_jobname"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_height="20dp"
                android:lineSpacingExtra="20dp"
                android:text=""
                android:textColor="@color/gray2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/job_list_item_createdatedt"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/job_list_item_corpname"
                android:lineSpacingExtra="20dp"
                android:text=""
                android:textColor="@color/gray2"
                android:textSize="15sp" />
            
            <TextView
                android:id="@+id/job_list_item_vertical_line"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/job_list_item_corpname"
                android:layout_toRightOf="@id/job_list_item_createdatedt"
                android:lineSpacingExtra="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=""
                android:textColor="@color/gray2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/job_list_item_jobcity"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/job_list_item_corpname"
                android:layout_toRightOf="@id/job_list_item_vertical_line"
                android:lineSpacingExtra="20dp"
                android:text=""
                android:textColor="@color/gray2"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="right"
        android:layout_marginTop="12dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" 
            >

                 <TextView
                android:id="@+id/job_list_item_salary"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
	            android:gravity="right"
	            android:layout_marginTop="7dip"
	            android:layout_alignParentRight="true"
                android:text="ss"
                android:paddingLeft="13dp"
                android:layout_marginRight="5dip"
                android:lineSpacingExtra="20dp"
                android:textColor="@drawable/orange"
                android:textSize="18sp" 
                />    
            
<!--                 <ImageView -->
<!-- 	            android:id="@+id/list_item_right_imgview" -->
<!-- 	            android:layout_width="20dip" -->
<!-- 	            android:layout_marginTop="8dip" -->
<!-- 	            android:layout_alignRight="@id/job_list_item_salary" -->
<!-- 	            android:layout_height="26dp" -->
<!-- 	            android:layout_gravity="right" -->
<!-- 	            android:src="@drawable/icon_arrow" -->
<!-- 	            android:paddingRight="10dp" /> -->

        </RelativeLayout>
 


    </LinearLayout>

    <ImageView
        android:id="@+id/list_item_right_imgview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dip"
        android:src="@drawable/icon_arrow" 
        android:layout_marginRight="6dip"
        />

</LinearLayout>