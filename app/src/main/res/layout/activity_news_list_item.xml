<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >
    <!-- 
    android:background="@color/gray" -->

    <!-- 
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10px"
        android:layout_marginRight="20px"
        android:background="@drawable/bgicon_shape"
        android:text="图片"
        android:textColor="@color/text_white" />
     -->
    
    <ImageView
        android:id="@+id/news_list_item_photourl_imageview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10px"
        android:layout_marginRight="20px"
        android:background="@drawable/image_shape"
        android:src="@drawable/image_shape" />

    <!-- android:lineSpacingMultiplier="1.5" -->
    <TextView
        android:id="@+id/news_list_item_title_txt"
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:lineSpacingExtra="20dp"
        android:layout_toRightOf="@id/news_list_item_photourl_imageview"
        android:text=""
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/news_list_item_source_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_list_item_title_txt"
        android:layout_toRightOf="@id/news_list_item_photourl_imageview"
        android:gravity="center" >

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:gravity="left"
            android:visibility="visible" >

            <TextView
                android:id="@+id/news_list_item_source_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        		android:lineSpacingExtra="20dp"
                android:text=""
                android:textColor="@color/gray1"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:gravity="left"
            android:visibility="visible" >

            <TextView
                android:id="@+id/news_list_item_author_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        		android:lineSpacingExtra="20dp"
                android:text=""
                android:textColor="@color/gray1"
                android:textSize="14dp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/news_list_item_description_txt"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:lineSpacingExtra="20dp"
        android:layout_below="@id/news_list_item_source_layout"
        android:layout_toRightOf="@id/news_list_item_photourl_imageview"
        android:text=""
        android:textSize="14dp" />

    <TextView
        android:id="@+id/news_list_item_time_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_list_item_description_txt"
        android:layout_toRightOf="@id/news_list_item_photourl_imageview"
        android:text=""
        android:textColor="@color/gray1"
        android:textSize="14dp" />

</RelativeLayout>