<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="90dip"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp" 
    android:descendantFocusability="blocksDescendants">
    
    <LinearLayout
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left" 
        android:layout_weight="1"
        android:orientation="vertical">
        
    	<RelativeLayout 
        	android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
    	    
			<ImageView android:id="@+id/job_favorite_list_item_delete_imageview" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
				android:src="@drawable/delete_one"
				android:layout_margin="10dp"
				android:contentDescription="@string/opt_delete"
				android:focusable="false"
				android:clickable="true"
				android:visibility="gone"
			/>
    	    
		    <TextView
		        android:id="@+id/activity_job_apply_list_item_jobname"
		        android:layout_toRightOf="@id/job_favorite_list_item_delete_imageview"
		        android:layout_width="wrap_content"
		        android:layout_height="26sp"
		        android:lineSpacingExtra="20dp"
		        android:textSize="20sp" 
                android:textColor="#5B5B5B"
		        android:text="" />
		    
		    <TextView
		        android:layout_marginTop="3dip"
		        android:id="@+id/activity_job_apply_list_item_corpname"
		        android:layout_toRightOf="@id/job_favorite_list_item_delete_imageview"
		        android:layout_below="@id/activity_job_apply_list_item_jobname"
		        android:layout_width="wrap_content"
		        android:layout_height="24dp"
		        android:lineSpacingExtra="20dp"
		        android:text=""
		        android:textColor="@color/gray1"
		        android:textSize="18sp" />
		    <TextView
		        android:id="@+id/activity_job_apply_list_item_issuedate"
		        android:layout_width="wrap_content"
		        android:layout_height="24dp"
		        android:layout_below="@id/activity_job_apply_list_item_corpname"
		        android:lineSpacingExtra="20dp"
		        android:text=""
                android:textColor="@color/gray1"
		        android:textSize="16sp" />
    	</RelativeLayout>
    
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="right" 
        android:orientation="vertical">

        <RelativeLayout
        	android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="left"
            android:visibility="visible" >

            <TextView
                android:id="@+id/activity_job_apply_list_item_jobcity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="20dp"
                android:text=""
                android:textColor="@color/gray1"
                android:textSize="16sp"
                tools:ignore="SpUsage" />

        </RelativeLayout>

      
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.3"
        android:gravity="right"
        android:orientation="vertical" 
        android:layout_marginLeft="4dip"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/activity_job_apply_list_item_arrow"
                android:layout_width="25dip"
                android:layout_height="25dp"
                android:src="@drawable/icon_arrow" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>