<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            >
            <TextView
                android:id="@+id/activity_message_list_item_lang"
                android:layout_width="100dp"
                android:layout_height="24dp"
                android:lineSpacingExtra="20dp"
                android:layout_margin="5dp"
                android:text="@string/message_return_lang"
                android:textSize="15sp" />
            
            <TextView
                android:id="@+id/activity_message_list_item_corpname"
                android:layout_width="100dp"
                android:layout_height="24dp"
                android:lineSpacingExtra="20dp"
                android:layout_margin="5dp"
                android:ellipsize="end" 
                android:singleLine="true"
                android:text=""
                android:layout_toRightOf="@id/activity_message_list_item_lang"
                android:visibility="gone"
                android:textSize="15sp" />
            
            <TextView
                android:id="@+id/activity_message_list_item_createdate"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="20dp"
                android:lineSpacingExtra="20dp"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/activity_message_list_item_corpname"
                android:textSize="15sp" />
            
            <TextView
                android:id="@+id/activity_message_list_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_message_list_item_createdate"
                android:layout_margin="5dp"
                android:text=""
                android:singleLine="false"
                android:textSize="15sp" />
            
            <TextView
                android:id="@+id/activity_message_list_item_id"
                android:layout_width="wrap_content"
                android:layout_height="24dp"	
                android:layout_below="@id/activity_message_list_item_lang"
                android:lineSpacingExtra="20dp"
                android:layout_margin="5dp"
                android:text=""
                android:visibility="gone"
                android:textSize="15sp" />
            
            <TextView
                android:id="@+id/activity_message_list_item_sender"
                android:layout_width="wrap_content"
                android:layout_height="24dp"	
                android:layout_below="@id/activity_message_list_item_lang"
                android:lineSpacingExtra="20dp"
                android:layout_margin="5dp"
                android:text=""
                android:visibility="gone"
                android:textSize="15sp" />
            
            

        </RelativeLayout>
    </LinearLayout>
    
</LinearLayout>
