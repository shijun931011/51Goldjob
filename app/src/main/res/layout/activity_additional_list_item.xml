<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="65dip" >
			<ImageView android:id="@+id/additional_list_item_delete_imageview" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
				android:src="@drawable/delete_one"
				android:layout_margin="10dp"
				android:contentDescription="@string/opt_delete"
				android:focusable="false"
				android:clickable="true"
				android:visibility="gone"
			/>
            <TextView
                android:id="@+id/activity_additional_list_item_subject"
                android:layout_width="wrap_content"
                android:layout_height="24sp"
                android:layout_toRightOf="@id/additional_list_item_delete_imageview"
                android:lineSpacingExtra="20dp"
                android:text=""
                android:layout_marginTop="8dip"
                android:gravity="center"
                android:textColor="#5B5B5B"
                android:textSize="18sp" />
            

            <TextView
                android:id="@+id/activity_additional_list_item_otherid"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_below="@id/activity_additional_list_item_subject"
                android:layout_toRightOf="@id/additional_list_item_delete_imageview"
                android:lineSpacingExtra="20dp"
                android:text=""
                android:layout_marginTop="3dip"
                android:visibility="visible"
                android:textColor="@color/gray1"
                android:textSize="16sp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
